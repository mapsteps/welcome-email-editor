{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"~/*": ["./modules/**/js/*.ts"]
		}
	},
	"exclude": [
		"node_modules"
	]
}